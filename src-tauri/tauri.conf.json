{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "小智辅导",
  "version": "0.1.0",
  "identifier": "com.xiaozhi.tutor",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bun run dev --host --port 1420",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "小智辅导",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "tooltip": "小智辅导"
    },
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:xiaozhi.db"]
    },
    "stronghold": {},
    "notification": {
      "all": true
    },
    "fs": {
      "scope": ["$APPDATA/**", "$HOME/XiaoZhi/**"]
    },
    "http": {
      "scope": ["https://**"]
    },
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
